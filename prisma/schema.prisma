generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Admins {
  id        String   @id @default(uuid())
  v         Int      @map("__v") @default(0)
  createdAt DateTime @default(now())
  username  String
  email     String   @unique
  password  String
  projects  Project[]   @relation("AdminsToProjects")
  updatedAt DateTime @updatedAt
}


model Project {
  id          String   @id @default(uuid())
  projectName String
  appName     String
  appEmail    String
  projectKey  String   @unique

  ownerId     String
  owner       Admins   @relation("AdminsToProjects", fields: [ownerId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
