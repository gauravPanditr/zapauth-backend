generator client {
  provider = "prisma-client-js"
  
  
}

datasource db {
  provider = "postgresql"
  
}

model Admins {
  id        String    @id @default(uuid())
  v         Int       @default(0) @map("__v")
  createdAt DateTime  @default(now())
  email     String    @unique
  username  String
  password  String
  updatedAt DateTime  @updatedAt
  projects  Project[]      @relation("AdminsToProjects")
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  adminId   String
  admin     Admins   @relation(fields: [adminId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Project {
  id          String   @id @default(uuid())
  projectName String
  appName     String
  appEmail    String
  projectKey  String   @unique
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  owner       Admins   @relation("AdminsToProjects", fields: [ownerId], references: [id])
users User[]

  

  sessions Session[]
}
model User {
  id          String    @id @default(uuid())
  project     Project   @relation(fields: [projectId], references: [id])
  projectId   String
  username    String   @db.VarChar(255)
  email       String    @unique
  password    String   @db.VarChar(255)
  isVerified  Boolean   @default(false)
  token       String?  @db.VarChar(255)
  tokenExpiry DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  

  sessions Session[]
}
model Session {
  id                 String   @id @default(uuid())


  projectId          String
  project            Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // üîó User
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // üîê Tokens
  accessToken        String   @unique @db.VarChar(512)
  accessTokenExpiry  DateTime

  refreshToken       String   @db.VarChar(512)
  refreshTokenExpiry DateTime

  
  userAgent          String   @db.VarChar(512)
  os                 String   @db.VarChar(100)
  deviceType         DeviceType
  networkIP          String  @db.VarChar(50)

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

}

enum DeviceType {
  MOBILE
  TABLET
  DESKTOP
  OTHER
}

