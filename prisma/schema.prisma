generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admins {
  id            String         @id @default(uuid())
  v             Int            @default(0) @map("__v")
  createdAt     DateTime       @default(now())
  email         String         @unique
  username      String
  password      String
  updatedAt     DateTime       @updatedAt
  projects      Project[]      @relation("AdminsToProjects")
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  adminId   String
  createdAt DateTime @default(now())
  expiresAt DateTime
  admin     Admins   @relation(fields: [adminId], references: [id])
}

model Project {
  id          String   @id @default(uuid())
  projectName String
  appName     String
  appEmail    String
  projectKey  String   @unique
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  owner       Admins   @relation("AdminsToProjects", fields: [ownerId], references: [id])
  users       User[]
}

model User {
  id          String    @id @default(uuid())
  projectId   String
  username    String    @db.VarChar(255)
  email       String    @unique
  password    String    @db.VarChar(255)
  isVerified  Boolean   @default(false)
  token       String?   @db.VarChar(255)
  tokenExpiry DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sessions    Session[]
  project     Project   @relation(fields: [projectId], references: [id])
}

model Session {
  id                 String   @id @default(uuid())
  userId             String
  projectId          String
  accessToken        String   @unique
  accessTokenExpiry  DateTime
  refreshToken       String   @unique
  refreshTokenExpiry DateTime
  deviceType         String
  userAgent          String
  ipAddress          String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  os                 String?
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
